.search-box {
  width: 100%;
  background-color: #c00000;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 999;
}
.sug-list {
  padding: 0 5px;
}
.sug-list .sug-item {
  font-size: 12px;
  border-bottom: 1px solid #efefef;
  padding: 13px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sug-list .sug-item .goods_name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 3px;
}
.history-box {
  padding: 0 5px;
}
.history-box .history-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
}
.history-box .history-list {
  display: flex;
  flex-wrap: wrap;
}
.history-box .history-list .uni-tag {
  margin-top: 5px;
  margin-right: 5px;
  font-size: 28rpx;
}
